<Application x:Class="CFS.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CFS.Client">
    <Application.Resources>
        
        <Style x:Key="HeaderLabel" TargetType="{x:Type Label}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="DemiBold" />
        </Style>

        <Style x:Key="FieldLabel" TargetType="{x:Type Label}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="FieldText" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="0" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="MenuButton" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="0 2 2 2" />
            <Setter Property="Width" Value="100" />
        </Style>

        <Style x:Key="RegularButton" TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="0 2 2 2" />
            <Setter Property="Width" Value="Auto"/>
        </Style>
        
    </Application.Resources>
</Application>
